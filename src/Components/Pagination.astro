---
const { prevUrl, nextUrl } = Astro.props;
---

<nav class="flex justify-center">
  {
    prevUrl && (
      <a href={prevUrl}>
        <button class="bg-[#5c5c5c] rounded-lg mt-5 sm:mt-6 md:mt-[25px] px-6 py-2 sm:py-2.5 md:py-3 border-none cursor-pointer text-base sm:text-lg md:text-xl lg:text-[20px] transition-colors duration-200 hover:bg-[#464646] short-screen-btn">
          Previous
        </button>
      </a>
    )
  }
  {
    nextUrl && (
      <a href={nextUrl}>
        <button class="bg-[#5c5c5c] rounded-lg mt-5 sm:mt-6 md:mt-[25px] px-6 py-2 sm:py-2.5 md:py-3 border-none cursor-pointer text-base sm:text-lg md:text-xl lg:text-[20px] transition-colors duration-200 hover:bg-[#464646] short-screen-btn ml-5">
          Next
        </button>
      </a>
    )
  }

  <style>
    @import "tailwindcss";
  </style>
</nav>
